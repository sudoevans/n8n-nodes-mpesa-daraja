{
    "compilerOptions": {
        "rootDirs": [
            "nodes",
            "credentials"
        ],
        "outDir": "dist",
        "target": "ES2019",
        "module": "commonjs",
        "lib": [
            "ES2019",
            "DOM"
        ],
        "moduleResolution": "node",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "removeComments": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "skipLibCheck": true
    },
    "include": [
        "nodes/**/*",
        "credentials/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}